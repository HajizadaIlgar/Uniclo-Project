@using Ab108Uniqlo.Models
@model Slider

@{
    ViewData["Title"] = "Create";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Slider create</h6>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input value="@Model.Title" class="form-control" asp-for="Title">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subtitle"></label>
                <input value="@Model.Subtitle" class="form-control" asp-for="Subtitle">
                <span class="text-danger" asp-validation-for="Subtitle"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link"></label>
                <input value="@Model.Link" class="form-control" asp-for="Link">
                <span class="text-danger" asp-validation-for="Link"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input value="@Model.ImageUrl" class="form-control" asp-for="ImageUrl">
                <span class="text-danger" asp-validation-for="ImageUrl"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>