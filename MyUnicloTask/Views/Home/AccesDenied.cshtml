@{
    Layout = "null";
}
<style>
    /* General Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        color: #333;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        overflow: hidden;
    }

    /* Main Container */
    .container {
        text-align: center;
        max-width: 600px;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    /* Error Code */
    .error-code {
        font-size: 96px;
        color: #dc3545; /* Red Color */
        margin-bottom: 10px;
    }

    /* Error Message */
    .error-message {
        font-size: 32px;
        margin-bottom: 20px;
        color: #6c757d;
    }

    /* Description Text */
    .description {
        font-size: 18px;
        line-height: 1.6;
        margin-bottom: 30px;
        color: #555;
    }

    /* Back to Homepage Button */
    .back-home {
        text-decoration: none;
        color: #fff;
        background-color: #007bff;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        transition: background-color 0.3s ease;
    }

        .back-home:hover {
            background-color: #0056b3;
        }

</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> meks</title>
</head>
<body>
    <div class="container">
        <h1 class="error-code">403</h1>
        <h2 class="error-message">Forbidden</h2>
        <p class="description">
            You don't have permission to access this page.<br>
            Please check the URL or go back to the homepage.
        </p>
        <a href="/" class="back-home">Go to Homepage</a>
    </div>
</body>
</html>
